CXXFLAGS = -Wall -Werror -Wextra -std=c++98

BIN = ./bin

SRCS =	Account.cpp \
		tests.cpp

OBJ = $(SRCS:%.cpp=$(BIN)/%.o)

DEP = $(OBJ:%.o=%.d)

RM = rm -f

all: $(NAME)


NAME =		battle_4

SRCS	=	main.cpp \
			ClapTrap.cpp \
			ScavTrap.cpp \
			FragTrap.cpp \
			DiamondTrap.cpp

OBJS	= $(SRCS:%.cpp=$(BIN)/%.o)

DEP = $(OBJS:%.o=%.d)

BIN		= ./bin

CXX	= clang++

CXXFLAGS = -Wall -Werror -Wextra -std=c++98 -Wshadow -Wno-shadow

RM = rm -f

all: $(NAME)

$(NAME):	$(OBJS)
